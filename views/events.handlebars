



<div class="row" id="event-list">

<div class="col-md-12">
	<div class="row" >

	 <div class="col-md-7"></div>
	  <div class="col-md-4">
		<button class="btn btn-md btn-success" id="createEvent">Create Event</button>
	  </div>

	</div>

</div>

  <div class="col-md-1"></div>

  <div class="col-md-7">
	<div class="panel-group">
   
	   

	  	{{#each events}}
		 <div class="panel panel-default event-row" data-id="{{this.id}}" data-attendees="{{this.attendees}}"  data-user-id="{{this.user.id}}" >
              <div class="panel-heading">
                <b>{{this.name}}</b> -  {{this.shortDate}}  <span class="pull-right">{{this.type}}</span>
              </div>
              <div class="panel-body">
                    {{this.description}}
              </div>
          <div class="panel-body center-block">
	 				<div class="d-flex">
		            	<span>Comments: &nbsp;</span>
		            	<span contenteditable="true" class="editable flex-1" id="comments-{{this.id}}">{{this.attendee.comments}}</span>  
		            </div>
		            <hr class="half-rule"/>

				 <button class="attend-status btn {{#attend}}btn-success{{/attend}}{{^attend}}btn-default{{/attend}}" 	data-status="attend" data-user-id="{{this.user.id}}"
		            data-event-id="{{this.id}}" >Attend</button>

		            <button class="attend-status btn {{#maybe}}btn-success{{/maybe}}{{^maybe}}btn-default{{/maybe}}" data-status="maybe" data-user-id="{{this.user.id}}"
		            data-event-id="{{this.id}}" >Maybe</button>

		            <button class="attend-status btn {{#notgoing}}btn-success{{/notgoing}}{{^notgoing}}btn-default{{/notgoing}}" data-status="notgoing"
		            data-user-id="{{this.user.id}}"
		            data-event-id="{{this.id}}"

		            >Not going</button>
		           
		            
	      </div> <!-- panel-body center-block -->
	    </div><!-- panel event-row -->

		{{/each}}

  </div> <!-- panel-group -->
  </div> <!-- col-md-7 -->

  <div class="col-md-3">
	  <div id="event-detail"></div>
  </div>
  <div class="col-md-1"></div>

</div> <!-- row --!>






<div class="row hidden" id="event-form">

  <div class="col-md-1"></div>
  <div class="col-md-7">

  <fieldset class="form-group">
    <legend>New Event</legend>
<div class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-4 control-label">Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="name" name="name" placeholder="Event Name">
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-4 control-label">Description</label>
    <div class="col-sm-8">
      <textarea class="form-control" id="description" name="description" placeholder="Description"></textarea>
    </div>
  </div>
   <div class="form-group">
    <label for="date" class="col-sm-4 control-label">Date</label>
    <div class="col-sm-8">
      <input type="datetime-local" class="form-control" name="date" id="date" placeholder="Event Date">
    </div>
  </div>

   <div class="form-group">
    <label for="type" class="col-sm-4 control-label">Type</label>
    <div class="col-sm-8">
    <select class="form-control" id="type" name="type">
	  	<option value="open">Open</option>
  		<option value="private">Private</option>
  </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="submitEvent" class="btn-md btn-success">Save</button>
    </div>
  </div>
</div>
</div>
</div>
</fieldset>





<script src="/assets/js/events.js"></script>





